    <button>
        <type>ZONEMINDER</type>
        <text>ZoneMinder</text>
        <description>View live and recorded home surveillance camera images</description>
        <action>PLUGIN mythzoneminder</action>
        <depends>mythzoneminder</depends>
    </button>
    
    <button>
        <type>CUSTOMISE_BARRY</type>
        <text>Customise Barry</text>
        <description>Change Barry’s look.</description>
        <action>MENU mainmenu/barry-customise.xml</action>
    </button>
    
    <button>
        <type>ABOUT_BARRY</type>
        <text>About Barry 0.1</text>
        <description>Barry menus is best used with “Barry”.</description>
        <action>MENU mainmenu/barry-about.xml</action>
    </button>
    
</mythmenu>
