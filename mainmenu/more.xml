<?xml version="1.0" encoding="utf-8"?>
<mythmenu name="MORE">

    <button>
        <type>SETUP</type>
        <text>Setup</text>
        <description>Settings for TV, Images, Music, Video, Weather, etc.</description>
        <action>MENU mainmenu/main_settings.xml</action>
        <password>SetupPinCode</password>
    </button>

    <button>
        <type>RELOAD_THEME</type>
        <text>Reload Theme</text>
        <description>Reload the current theme</description>
        <action>EXEC bash ~/.mythtv/themes/Barry_dev/customise/customise.sh reload</action>
    </button>

    <button>
        <type>MEDIA</type>
        <text>Media</text>
        <description>Browse local media</description>
        <action>MENU mainmenu/media.xml</action>
    </button>

    <button>
        <type>INTERNET</type>
        <text>Internet</text>
        <description>Use internet plugins</description>
        <action>MENU mainmenu/internet.xml</action>
    </button>

    <button>
        <type>STREAM</type>
        <text>Play online streams</text>
        <action>PLUGIN mythstream</action>
        <depends>mythstream</depends>
    </button>

    <button>
        <type>WEATHER</type>
        <text>Weather Station</text>
        <description>View weather statistics</description>
        <action>PLUGIN mythwstation</action>
        <depends>mythwstation</depends>
    </button>

    <button>
        <type>RECIPE</type>
        <text>Recipes</text>
        <action>PLUGIN mythRecipe</action>
        <depends>mythRecipe</depends>
    </button>

